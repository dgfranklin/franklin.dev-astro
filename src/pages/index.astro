---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import { Image } from 'astro:assets';
import profile from '../assets/profile.jpg';

// Import bio markdown file - Astro handles markdown natively
import { Content as BioContent } from '../content/bio.md';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class=" font-sans max-w-screen-lg mx-auto">
		<Header title={SITE_TITLE} />
		<main class="">
			<div class="md:flex flex-row gap-4 mx-4">
				<Image class="rounded-full mb-4 md:mb-0 mx-auto md:rounded-lg h-32 w-32 md:h-64 md:w-64" src={profile} alt="Headshot of David Franklin"/>
				<section class="bio-content">
					<BioContent />
				</section>
			</div>
		</main>
		<Footer />
	</body>
	<style>
	  .picture {
		background-color: red;
	  }

	  .bio-content :global(ul) {
		@apply list-disc list-inside;
	  }
	</style>
</html>

